<h1 class="text-center my-5">Article Details</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-light rounded">
        <div class="card-body">
          <!-- Title -->
          <h2 class="card-title text-primary mb-4"><%= @article.title %></h2>

          <!-- Content -->
          <p class="card-text"><%= @article.content %></p>

          <!-- Edit and Delete Buttons -->
          <div class="d-flex justify-content-between mt-4">
            <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Delete", article_path(@article),
                method: :delete,
                data: { turbo_confirm: "Are you sure?", turbo_method: :delete },
                class: "btn btn-outline-danger btn-lg" %>
            <%= link_to 'Back to Articles', articles_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
