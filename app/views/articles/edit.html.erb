<h1 class="text-center my-5">Edit Article</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @article, local: true do |form| %>
        <div class="card shadow-sm border-light rounded">
          <div class="card-body">
            <h3 class="card-title mb-4">Edit Article Details</h3>

            <!-- Title Input -->
            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter the title of your article" %>
            </div>

            <!-- Content Input -->
            <div class="mb-3">
              <%= form.label :content, class: "form-label" %>
              <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "Edit the content of your article" %>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <%= form.submit "Update Article", class: "btn btn-primary rounded-pill px-4" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
